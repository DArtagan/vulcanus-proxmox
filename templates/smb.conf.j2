[global]
   workgroup = WORKGROUP
   server string = Samba Server
   server role = standalone server
   min protocol = SMB2
   dos charset = cp850
   unix charset = ISO-8859-1
   # force user = sambauser
   guest account = nobody
   map to guest = Bad User
   log file = /var/log/samba/log.%m
   log level = 2
   max log size = 50
   load printers = no
   printing = bsd
   printcap name = /dev/null
   disable spoolss = yes

[media]
   browseable = yes
   writeable = yes
   path = /mnt/media
   guest ok = yes
   # guest only = yes
